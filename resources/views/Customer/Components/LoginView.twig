{% import "Ceres::PageDesign.Macros.LayoutContainer" as LayoutContainer %}
{% set backlink = request.get("backlink") %}

{{ component( "Stoune::Customer.Components.GuestLogin" ) }}

<script type="x/template" id="vue-login-view" >
    <div class="container-max login">
      <div class="loginCheckout">
          <h1>Anmelden</h1>
          <div class="row">
            <div class="col-sm-6">
              <div class="col_inner keinKunde">

                <div class="gastBestellung">
                  <h2>Gastbestellung</h2>
                  {% if "my-account" not in backlink %}

                          <guest-login template="#vue-guest-login" backlink="{{ backlink | url_encode }}"></guest-login>

                  {% endif %}

                </div>

                <div class="registrierenBestellung">
                  <h2>Noch kein Kunde?</h2>
                  <p class="KeinKundeRegister">Sie k√∂nnen bei uns bestellen ohne sich zu registrieren (Als Gast bestellen) oder ein Konto erstellen (Registrieren).</p>

                      <a class="btn btn-primary btn-medium float-right" href="{{ urls.registration }}{% if backlink | trim is not empty %}?backlink={{ backlink | url_encode}}{% endif %}">
                          <i class="fa fa-user-plus" aria-hidden="true"></i>
                          {{ trans("Ceres::Template.loginRegister") }}
                      </a>


                </div>


              </div>
            </div>
            <div class="col-sm-6">
              <div class="col_inner">
              <h2>Sind Sie bereits Kunde?</h2>

              <div>
                  <h1 class="login-view-title mb-5">{{ trans("Ceres::Template.login") }}</h1>
                  <login template="#vue-login" backlink="{{ backlink | url_encode }}" has-to-forward="true"></login>
              </div>



              </div>
            </div>
          </div>

      </div>




    </div>
</script>
