{% import "Ceres::PageDesign.Macros.LayoutContainer" as LayoutContainer %}
{% set backlink = request.get("backlink") %}

{{ component( "Stoune::Customer.Components.GuestLoginStoune" ) }}

<script type="x/template" id="vue-login-view" >
    <div class="container-max login">
      <div class="loginCheckout" style="display: block;">
          <h1>Anmelden</h1>
          <div class="row">
            <div class="col-sm-6">
              <div class="col_inner">
                <h2>Noch kein Kunde?</h2>
                <p class="KeinKundeRegister">Als Kunde können Sie jederzeit auf unser Konto haben. Dieser Zugriff ermöglicht Ihnen Ihre Bestellungen jederzeit im Griff zu haben.</p>
                <p class="keinKundeGast">Sie können bei uns auch als Gast bestellen.</p>

                <div class="KeinKundeButtons">
                <div class="col-sm-{% if 'my-account' not in backlink %}6{% else %}12{% endif %}">
                    <a class="btn btn-primary btn-block mb-3" href="{{ urls.registration }}{% if backlink | trim is not empty %}?backlink={{ backlink | url_encode}}{% endif %}">
                        <i class="fa fa-user-plus" aria-hidden="true"></i>
                        {{ trans("Ceres::Template.loginRegister") }}
                    </a>
                </div>
                  {% if "my-account" not in backlink %}
                      <div class="col-sm-6">
                        {% include "Stoune::Customer.Components.GuestLoginStoune" %}
                      </div>
                  {% endif %}
                </div>

              </div>
            </div>
            <div class="col-sm-6">
              <div class="col_inner">
              <h2>Sind Sie bereits Kunde?</h2>

              <div>
                  <h1 class="login-view-title mb-5">{{ trans("Ceres::Template.login") }}</h1>
                  <login template="#vue-login" backlink="{{ backlink | url_encode }}" has-to-forward="true"></login>
              </div>



              </div>
            </div>
          </div>

      </div>















        <div class="row mb-5">
            <div class="col-sm-10 offset-sm-1 col-md-6 offset-md-3">

                <div>
                    <h1 class="login-view-title mb-5">{{ trans("Ceres::Template.login") }}</h1>
                    <login template="#vue-login" backlink="{{ backlink | url_encode }}" has-to-forward="true"></login>
                </div>

                <hr>
                <div class="row">
                    <div class="col-sm-{% if 'my-account' not in backlink %}6{% else %}12{% endif %}">
                        <a class="btn btn-primary btn-block mb-3" href="{{ urls.registration }}{% if backlink | trim is not empty %}?backlink={{ backlink | url_encode}}{% endif %}">
                            <i class="fa fa-user-plus" aria-hidden="true"></i>
                            {{ trans("Ceres::Template.loginRegister") }}
                        </a>
                    </div>

                    {% if "my-account" not in backlink %}
                        <div class="col-sm-6">
                            <button class="btn btn-primary btn-block mb-3" @click="openGuestModal()">
                                <i class="fa fa-shopping-bag" aria-hidden="true"></i>
                                {{ trans("Ceres::Template.loginOrderAsGuest") }}

                            </button>
                        </div>
                    {% endif %}
                </div>

                {{ LayoutContainer.show("Ceres::Login.AdditionalContentAfterButtons") }}

            </div>
        </div>

        <guest-login template="#vue-guest-login" backlink="{{ backlink | url_encode }}"></guest-login>

    </div>
</script>
